{%- set secret_path = salt['pillar.get']('data:path') ~ '/secret' -%}
[Unit]
Description=Legacy magbot (based on hubot)
After=network.target

[Service]
Type=forking
Restart=always
User=magbot
ExecStart={{ secret_path }}/legacy_magbot/run-bot.sh >> /var/log/hubot.out.log 2>> /var/log/hubot.err.log

[Install]
WantedBy=multi-user.target
